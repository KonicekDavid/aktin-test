services:
	- App\Core\RouterFactory::createRouter
	- App\Security\JWTService(%jwt.secret%, %jwt.ttl%)

	#Repositories

	#Facades
	- App\Model\Facade\UserFacade
	- App\Model\Facade\ArticleFacade


#search:
#	-	in: %appDir%
#		classes:
#			- *Facade
#			- *Factory
