extensions:
    nettrine.dbal: Nettrine\DBAL\DI\DbalExtension
    nettrine.orm: Nettrine\ORM\DI\OrmExtension

nettrine.dbal:
  connections:
      default:
        driver: pdo_sqlite
        path: db/database.sqlite

nettrine.orm:
  managers:
    default:
      connection: default
      mapping:
        App:
          directories: [%appDir%/Model/Entity]
          namespace: App\Model\Entity